{
  "manifest_version": 3,
  "name": "Naval Auction Assistant",
  "version": "0.1.0",
  "description": "Intelligent browser extension for naval auction monitoring and analysis",
  "author": "Horoiu Marian",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Naval Auction Assistant"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.example.com/*", "*://*.auction-site.com/*"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["storage", "tabs"],
  "host_permissions": ["*://*.example.com/*", "*://*.auction-site.com/*"],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["*://*.e-licitatie.ro/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
